<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:backgroundTint ="@color/secondaryColor">

    <TextView
        android:id="@+id/txt_goal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="1"
        android:text="first goal "
        android:textSize="20sp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/btn_goal_achieved"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_goal_name"
        android:background="@drawable/meh"/>


    <TextView
        android:id="@+id/txt_goal_target_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center|bottom"
        app:layout_constraintTop_toBottomOf="@id/txt_goal_name"
        app:layout_constraintStart_toEndOf="@id/btn_goal_achieved"
        android:text="Target date"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/txt_number_mini_goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="right|bottom"
        app:layout_constraintTop_toBottomOf="@id/txt_goal_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="7 mini goals"
        android:textSize="16sp"/>



</androidx.cardview.widget.CardView>